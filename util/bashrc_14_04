source ~/git-completion.bash 
export PS1='\[\e[36;1m\]\u@\[\e[32;1m\]\H:\[\e[0m\]\W\[\e[31;1m\]$(__git_ps1 "(\%s)")\[\e[0m\]>' 
export GIT_SSL_NO_VERIFY=1

# Custom 
export ROBOT=sim
#export DISPLAY=:0.0
